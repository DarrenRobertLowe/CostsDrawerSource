            <string>if ( in_view() )
{
    reset_text();
    
    var pSize = firstPage_Plaintiffs.lines;
    if (pSize &gt;= 10) then pSize = 10;                               // limit to 6 names + "AND OTHERS..." + whitespace + "and" etc.
    row = (firstPage_Plaintiffs.row + pSize);
    
    textPosY = getYFromRow(row+1);                                  // +1 because text is drawn from bottom up and getYFromRow returns row -1. Don't know why, but it seems to be needed.
    
    
    
    
    ds_list_clear(defendants);
    
    for(i=ds_list_size(global.DEFENDANTS)-1; i&gt;0; i--)
    {
        var value = ds_list_find_value(global.DEFENDANTS,i);
        ds_list_insert(defendants,0,value);
        ds_list_insert(defendants,0,andText);
    }
    
    
    if !is_undefined(ds_list_find_value(global.DEFENDANTS,0))
    {
        var value = ds_list_find_value(global.DEFENDANTS,0);
        ds_list_insert(defendants,0,value);
    }
    
    var listSize = ds_list_size(defendants);
    var maxWidth = global.descriptionTextWidth;
    var scale    = global.scale;
    
    
    
    
    // copy the first six defendants
    var count = ds_list_size(defendants);
    if (count &gt; 6) then count = 6;
    
    
    // copy over the defendants while changing them to UPPER CASE
    ds_list_clear(drawnDefendants);
    for(var i=0; i&lt;count; i++)
    {
        var value = ds_list_find_value(defendants,i);
        
        if  (ds_list_find_value(defendants,i) != andText)           // don't uppercase this
        and (ds_list_find_value(defendants,i) != "and OTHERS")      // or this
        {
            ds_list_add(drawnDefendants,string_upper(value));
        }
        else ds_list_add(drawnDefendants,value);
    }
    
    
    
    // delete redundant "and"s
    if (ds_list_find_value(drawnDefendants,5) == andText)
     then ds_list_replace(drawnDefendants,5,"and OTHERS");
    
    if (ds_list_find_value(drawnDefendants,5) == " and OTHERS ")
    {
        if (ds_list_find_value(drawnDefendants,4) == andText)
         then ds_list_delete(drawnDefendants,4);
    }
    
    
    separate_list_lines(drawnDefendants,1,maxWidth,font_TimesBold);
    
    var size1 = ds_list_size(shownDescriptionList);
    var size2 = ds_list_size(drawnDefendants);
    lines = (size1 + size2);
    
    
    
    
    /* DRAW Description */
    draw_set_halign(fa_left);
        
        // setup
        draw_set_font_scaled(font_TimesBold)
        var size = ds_list_size(drawnDefendants);
        var i;
        var xx = (global.textMargin + global.descriptionColumnX);
        
        
        //// DRAW DEFENDANTS LIST
        for(i=0; i&lt;size; i++) 
        {
            var text = ds_list_find_value(drawnDefendants,i);
            
            if (text = andText)
              then draw_set_font_scaled(font_Times);
              else draw_set_font_scaled(font_TimesBold);
              
            draw_text(
                xx,                                                 // x,
                textPosY+(i*global.rowHeight),                      // y,
                text,                                               // draw andText lowercase
                );
        }
        
        
        //// lines after Defendants list
        i = ds_list_size(drawnDefendants);
        draw_set_font_scaled(font_Times);
        
        if ( ds_list_size(global.DEFENDANTS) &gt; 1 )
        {
            draw_text( // "Defendants"
                global.textMargin + global.descriptionColumnX,  // x,
                textPosY+(i*global.rowHeight),                  // y,
                "                                    Defendants"
            );
        }
        else
        {
            draw_text( // "Defendant"
                global.textMargin + global.descriptionColumnX,  // x,
                textPosY+(i*global.rowHeight),                  // y,
                "                                    Defendant"
            );
        }
    
    
    
    // concatenate lists for excel exporting
    for(var i=0; i&lt;ds_list_size(shownDescriptionList); i++)
    {
        var value = ds_list_find_value(shownDescriptionList,i);
        ds_list_add(drawnDefendants,value);
    }
}
