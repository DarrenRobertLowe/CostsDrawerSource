        <functionname></functionname>
        <codestring></codestring>
        <whoName>seniorCounsel</whoName>
        <relative>0</relative>
        <isnot>0</isnot>
        <arguments>
          <argument>
            <kind>1</kind>
            <string>/// mouse click events

var endX = ( global.right_column_x + SCROLLBAR.width + view_xview[0] );

if (x2 &lt; endX) // don't show if there's not enough space
{
    // FONT
    reset_text();
    if (global.GUI_SCALE == 1)   then draw_set_font(font_GUI);
    if (global.GUI_SCALE == 1.5) then draw_set_font(font_GUI_large);
    draw_set_valign(fa_top);
    
    // COLOR and DRAW NAME
    if (global.SENIOR_COUNSEL != "")
    {
        draw_set_colour(global.itemTextColor);
        draw_text(x1,y1,shownName);//global.SENIOR_COUNSEL);
    }
    else
    {
        draw_set_colour(global.grayText);
        draw_text(x1,y1,"Senior Counsel Name");
    }
    
    
    /* Functionality */
    if  (toggle == 1)
    and (global.popup == 0)
    {
        draw_set_color(global.highlightColor);
        draw_set_alpha(global.highlightAlpha);
        draw_rectangle(x1,y1,x2,y2,0);
        
        if (mouse_check_button_pressed(mb_left))         // if the user is pressing this button
        {
            var defaultName = string_replace_all(global.SENIOR_COUNSEL," S.C.","")
            var name = (get_string("Enter Senior Counsel Name:",defaultName));
            name     = text_remove_special_characters(name);
            
            if  (name != global.SENIOR_COUNSEL)
            and (name != "")
            {
                global.SENIOR_COUNSEL = name;
                if (name != "") then global.SENIOR_COUNSEL += " S.C.";

                // update shownName
                update_counsel_shownName(global.SENIOR_COUNSEL);

                
                set_unsaved();
                
                // update names
                with (ITEM) { alarm[5] = 1; }
            }
        }
    }
    
    
    // TOOLTIP and MOUSE OVER TOGGLE
    if  (mouseOverArea(x1-view_xview[0], y1-view_yview[0], x2-view_xview[0], y2-view_yview[0]) )                  // if the mouse is over this button
    and (mouse_is_free() = true) //if hovering without performing other actions like dragging a scrollbar, etc...
    {
        toggle = 1;
        tooltip("Enter/Change the senior counsel's name");
    }
    else toggle = 0;
    
    reset_text();
}
</string>
